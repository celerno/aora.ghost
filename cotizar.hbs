{{!< default}}
<section id="cotizar-section">
    <div>
        <img src='/assets/visuals/slogan{{#is "request-quote"}}-en{{/is}}.svg'>
    </div>
    <div>
        <form id="cotiza-form">
            <div>
                <input name="nombre" type="text" placeholder='{{#is "cotizar"}}NOMBRE{{else}}NAME{{/is}}' />
            </div>
            <div>
                <input width="250px" name="celular" type="tel" placeholder={{#is "cotizar" }}"CELULAR / WHATSAPP"
                    {{else}}"CELL / WHATSAPP"{{/is}} required />
            </div>
            <div>
                <input name="correo" type="text" placeholder="EMAIL" required />
            </div>
            <div>
                <input name="empresa" type="text" placeholder={{#is "cotizar" }}"EMPRESA"{{else}}"COMPANY"{{/is}} />
            </div>
            <div>
                {{#is "cotizar"}}
                <textarea width="300px" rows="15" cols="40" name="intereses" form="cotiza">Me interesan los servicios de:
            ◽ Branding
            ◽ Marketing
            ◽ Web
            ◽ Redes Sociales
            ◽ Editorial
            ¿Otros...? Cuéntanos aquí:
        </textarea>
                {{else}}
                <textarea width="300px" rows="15" cols="40" name="intereses" form="cotiza">I'm interested in:
            ◽ Branding
            ◽ Marketing
            ◽ Web
            ◽ Editorial Design
            ◽ Social Media
            ...Something else? tell us here:
        </textarea>

                {{/is}}
            </div>

            <div class="end">
                <button type="submit" id="submit-form">
                    <span>{{#is "cotizar"}}Enviar{{else}}Send{{/is}}</span>
                    <div>
                        <svg xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" viewBox="0 0 29.756 29.756"
                            style="enable-background:new 0 0 29.756 29.756;" xml:space="preserve">
                            <path
                                d="M29.049,5.009L28.19,4.151c-0.943-0.945-2.488-0.945-3.434,0L10.172,18.737l-5.175-5.173   c-0.943-0.944-2.489-0.944-3.432,0.001l-0.858,0.857c-0.943,0.944-0.943,2.489,0,3.433l7.744,7.752   c0.944,0.943,2.489,0.943,3.433,0L29.049,8.442C29.991,7.498,29.991,5.953,29.049,5.009z" />
                        </svg>
                    </div>
                </button>
            </div>
        </form>
    </div>
    </section>
<script>

    document.title = {{#is "cotizar"}} 'Cotizar proyecto'{{else}}'Request a quote'{{/is}};
    document.documentElement.classList.add('dark-mode');
</script>
<style>
footer{
    display:none !important;
    }
 .dark-mode .logo-image{
     opacity:1 !important;
}
    .dark-mode img.logo-image {
        filter:invert(1);
    }
    .page-title{
        display:none;
    }
</style>