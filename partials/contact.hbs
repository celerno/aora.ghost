<form action="https://formspree.io/f/myylooeq" method="POST">
    {{#is "en"}}
    <span>Please leave <b>your contact <br class="break">information</b> and we’ll get<br class="break"> back<br
            class="break-md" />to you in <b>less than 24 hrs.</b></span>
    {{else}}
    <span>Déjanos <b>tus datos</b> y nos <br class="break-md" /> comunicaremos contigo
        <br class="break">
        en <b>menos de 24 hrs.</b></span>
    {{/is}}
    <div class="contact flex-column-md">
        <div> <input class="element-start" type="text" placeholder={{#is "en" }}"NAME"{{else}}"NOMBRE"{{/is}} />
        </div>
        <div> {{>separator}}
        </div>
        <div> <input class="element-middle" type="tel" placeholder={{#is "en" }}"PHONE"{{else}}"TELÉFONO"{{/is}} />
        </div>
        <div> {{>separator}}
        </div>
        <div> <input class="element-end" name="_replyto" type="email" placeholder={{#is "en"
                }}"MAIL"{{else}}"CORREO"{{/is}} />
        </div>
    </div>
    {{#is "en"}}
    <input type="image" src="/assets/visuals/enviar-en.svg" name="submit" />
    {{else}}
    <input type="image" src="/assets/visuals/enviar.svg" name="submit" />
    {{/is}}
</form>