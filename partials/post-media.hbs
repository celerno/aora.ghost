{{#if feature_image}}
    <figure class="post-media">
            <a class="post-image-link" href="{{url}}">
                <img loading="lazy" class="post-image"
                    src="{{img_url feature_image size="m"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
            </a>
    </figure>
{{/if}}