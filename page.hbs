{{!< default}} <section id="page">
    {{#post}}
    {{#if feature_image}}
        {{>post-media}}
        {{>separator-title}}
    {{else}}
        {{#if title}}
            <div class="page-title">{{title}}
                {{>separator-title}}
            </div>

        {{/if}}
    {{/if}}

    <article class="{{post_class}}{{#unless feature_image}} no-image{{/unless}} single-post">
        <div class="post-content kg-canvas u-text-format">
            {{content}}
        </div>
    </article>
    {{/post}}
</section>
